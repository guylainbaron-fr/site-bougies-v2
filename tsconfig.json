{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"]
    },
    "ignoreDeprecations": "5.0"
  },
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.astro"
  ],
  "exclude": ["dist", "node_modules"]
}