// Fonction pour calculer les badges au chargement
function updateBadges() {
    const entries = document.querySelectorAll('.log-entry');
    let counts = { all: 0, qr: 0, mobile: 0, pc: 0, france: 0, intl: 0, bot: 0 };

    entries.forEach(entry => {
        const isQR = entry.getAttribute('data-qr') === 'true';
        const device = entry.getAttribute('data-device');
        const country = entry.getAttribute('data-country');
        const isBot = (device === 'Bot' || device === 'Robot');

        counts.all++;
        if (isQR) counts.qr++;
        
        if (isBot) {
            counts.bot++;
        } else {
            if (device === 'iOS' || device === 'Android') counts.mobile++;
            if (device === 'PC' || device === 'Ordinateur') counts.pc++;
        }

        if (country === 'FRANCE') counts.france++;
        else counts.intl++;
    });

    if(document.getElementById('count-all')) document.getElementById('count-all').innerText = counts.all;
    if(document.getElementById('count-qr')) document.getElementById('count-qr').innerText = counts.qr;
    if(document.getElementById('count-mobile')) document.getElementById('count-mobile').innerText = counts.mobile;
    if(document.getElementById('count-pc')) document.getElementById('count-pc').innerText = counts.pc;
    if(document.getElementById('count-france')) document.getElementById('count-france').innerText = counts.france;
    if(document.getElementById('count-intl')) document.getElementById('count-intl').innerText = counts.intl;
    if(document.getElementById('count-bot')) document.getElementById('count-bot').innerText = counts.bot;
}

// Fonction de filtrage
function filterLogs(type) {
    const entries = document.querySelectorAll('.log-entry');
    const buttons = document.querySelectorAll('.filter-btn');

    buttons.forEach(btn => btn.classList.remove('active'));
    if (event) event.currentTarget.classList.add('active');

    entries.forEach(entry => {
        const isQR = entry.getAttribute('data-qr') === 'true';
        const device = entry.getAttribute('data-device');
        const country = entry.getAttribute('data-country');
        const isBot = (device === 'Bot' || device === 'Robot');

        let show = false;
        if (type === 'all') show = true;
        else if (type === 'qr' && isQR) show = true;
        else if (type === 'bot' && isBot) show = true;
        // On affiche mobile/pc seulement si ce n'est PAS un bot
        else if (type === 'mobile' && !isBot && (device === 'iOS' || device === 'Android')) show = true;
        else if (type === 'pc' && !isBot && (device === 'PC' || device === 'Ordinateur')) show = true;
        else if (type === 'france' && country === 'FRANCE') show = true;
        else if (type === 'international' && country !== 'FRANCE') show = true;

        entry.style.display = show ? 'grid' : 'none';
    });
}

// --- NOUVELLE FONCTION : EXPORT CSV ---
function exportLogsToCSV() {
    // On récupère les entrées visibles ou toutes les entrées
    const entries = document.querySelectorAll('.log-entry');
    let csvContent = "Date;Heure;Source;Appareil;Pays;Ville\r\n"; // En-têtes

    entries.forEach(entry => {
        // On ne prend que les lignes affichées (si tu as filtré avant l'export)
        if (entry.style.display !== 'none') {
            const cells = entry.querySelectorAll('span');
            const rowData = Array.from(cells)
                .map(cell => `"${cell.innerText.trim().replace(/"/g, '""')}"`)
                .join(";");
            csvContent += rowData + "\r\n";
        }
    });

    // Encodage UTF-8 avec BOM pour Excel
    const BOM = "\uFEFF";
    const blob = new Blob([BOM + csvContent], { type: 'text/csv;charset=utf-8;' });
    const url = URL.createObjectURL(blob);
    const link = document.createElement("a");
    const dateFile = new Date().toLocaleDateString('fr-FR').replace(/\//g, '-');

    link.setAttribute("href", url);
    link.setAttribute("download", `logs_atelier_${dateFile}.csv`);
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
}

