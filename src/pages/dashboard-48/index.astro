const currentYear = new Date().getFullYear();
export const prerender = false;

// @ts-ignore
import { kv } from '@vercel/kv';

interface LogEntry {
    device: string;
    ip?: string;
    isQR?: boolean | string;
    date: string;
    country?: string;
    flag_code?: string;
}

// GESTION DU POST (Reset)
if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();
        if (formData.get("action") === "reset") {
            await kv.set('visites_totales', 0);
            await kv.del('journal_visites');
            return Astro.redirect('/dashboard-48'); 
        }
    } catch (e) {
        console.error("Erreur Reset:", e);
    }
}

let totalVisites = 0;
let logs: LogEntry[] = [];
let iosCount = 0;
let androidCount = 0;
let pcCount = 0;
let botCount = 0; // <--- AJOUTÉ
let qrCount = 0;

try {
    totalVisites = (await kv.get<number>('visites_totales')) || 0;
    const rawLogs = (await kv.lrange('journal_visites', 0, 99)) || []; 
    
    logs = rawLogs.map((item: any) => {
        const log: LogEntry = typeof item === 'string' ? JSON.parse(item) : item;
        
        // --- MISE À JOUR DES COMPTEURS ---
        if (log.device === "Bot") botCount++; // <--- AJOUTÉ
        else if (log.device === "iOS") iosCount++;
        else if (log.device === "Android") androidCount++;
        else if (log.device === "Ordinateur" || log.device === "PC") pcCount++;
        
        if (log.isQR === true || String(log.isQR) === 'true') qrCount++;
        return log;
    });
} catch (e) {
    console.error("Erreur de récupération KV sur le Dashboard:", e);
}

// --- 1. CALCULS DES TOTAUX ---
const totalVisitesHumaines = iosCount + androidCount + pcCount;
const totalAvecBots = totalVisitesHumaines + botCount;

// --- 2. CALCULS POUR LA BARRE TECHNOLOGIE (Humains + Bots) ---
const iosPct = totalAvecBots > 0 ? Math.round((iosCount / totalAvecBots) * 100) : 0;
const androidPct = totalAvecBots > 0 ? Math.round((androidCount / totalAvecBots) * 100) : 0;
const pcPct = totalAvecBots > 0 ? Math.round((pcCount / totalAvecBots) * 100) : 0;
const botPct = totalAvecBots > 0 ? Math.round((botCount / totalAvecBots) * 100) : 0;

// --- 3. CALCULS POUR LA BARRE ORIGINE (Humains uniquement) ---
// C'est ce bloc qui te manque et qui cause les erreurs !
const qrPct = totalVisitesHumaines > 0 ? Math.round((qrCount / totalVisitesHumaines) * 100) : 0;
const directPct = totalVisitesHumaines > 0 ? 100 - qrPct : 0;
