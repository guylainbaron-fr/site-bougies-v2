---
// src/pages/dashboard-48/cartes.astro
import ThankYouCard from '../../components/ThankYouCard.astro';
const currentYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow">
    <title>Gestion des Cartes | J.F. & Aniuta</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="icon" type="image/png" sizes="32x32" href="/images/icon-dashboard.png" />
    
    <style>
      :root { 
          --sable-dore: #e0c297; 
          --vanille-pure: #fcf4dd; 
          --brun-coco: #4a3728; 
          --fond-ecume: #fdfaf7;
          --font-principale: "Poppins", sans-serif;
      }

      * { box-sizing: border-box; }

      body { 
          margin: 0; padding: 0; 
          background-color: var(--fond-ecume); 
          font-family: var(--font-principale); 
          color: var(--brun-coco);
          display: flex;
          flex-direction: column;
          min-height: 100vh;
      }
      
      .header-prive { 
          background: white; 
          padding: 12px 15px;
          display: flex;
          justify-content: space-between;
          align-items: center;
          border-bottom: 2px solid var(--sable-dore);
          flex-shrink: 0;
          gap: 10px;
      }

      .header-prive h1 { 
          margin: 0; 
          font-size: 0.85rem; 
          text-transform: uppercase; 
          white-space: nowrap;
      }

      .nav-right { display: flex; align-items: center; gap: 8px; }

      .btn { 
          padding: 8px 12px; border-radius: 4px; text-decoration: none; 
          font-weight: 700; text-transform: uppercase; font-size: 0.6rem; 
          border: 1px solid var(--sable-dore); color: var(--brun-coco); background: white;
          display: flex; align-items: center; gap: 6px;
      }
      .btn-gold { background: var(--vanille-pure); }

      /* ZONE DE PREVIEW */
      .preview-container {
          width: 100%;
          flex-grow: 1; 
          display: flex;
          justify-content: center;
          align-items: center; 
          padding: 20px 0;
      }

      .page-a4 {
          width: 210mm;
          height: 297mm;
          background: white;
          display: flex;
          flex-direction: column;
          box-shadow: 0 10px 30px rgba(0,0,0,0.1);
          transform-origin: center center;
      }

      /* MOBILE AJUSTEMENTS */
      @media (max-width: 768px) {
          .page-a4 { zoom: 0.4; }
          .btn-text { display: none; }
      }

      @media (max-width: 480px) {
          .header-prive h1 span { display: none; } /* Cache "Impression" pour laisser place aux boutons */
          .page-a4 { zoom: 0.35; }
      }

      .half {
          flex: 1;
          display: flex;
          justify-content: center;
          align-items: center;
          position: relative;
      }

      .cut-line {
          position: absolute;
          bottom: 0; left: 0; right: 0;
          border-bottom: 1px dashed #eee;
      }

      .dashboard-footer {
          padding: 20px 0;
          border-top: 1px solid var(--sable-dore);
          text-align: center;
          background: white;
          margin-top: auto; 
          width: 100%;
      }

      /* --- MÉTHODE RADICALE POUR L'IMPRESSION --- */
      @media print {
          @page { 
              size: A4 portrait; 
              margin: 0 !important; 
          }
          
          /* On cache tout le site */
          body * { visibility: hidden; }
          
          /* On ne rend visible que la carte et son contenu */
          .preview-container, .preview-container *, .page-a4, .page-a4 * { 
              visibility: visible; 
          }

          .preview-container {
              position: absolute !important;
              top: 0 !important;
              left: 0 !important;
              width: 100% !important;
              height: 100% !important;
              padding: 0 !important;
              margin: 0 !important;
              display: block !important;
          }

          .page-a4 { 
              position: absolute !important;
              top: 0 !important;
              left: 0 !important;
              width: 210mm !important;
              height: 296mm !important; /* On réduit de 1mm pour être 100% sûr d'éviter la page 2 */
              zoom: 1 !important;
              box-shadow: none !important;
              border: none !important;
              page-break-after: avoid !important;
              page-break-inside: avoid !important;
          }

          .header-prive, .dashboard-footer { display: none !important; }
      }
    </style>
  </head>
  <body>

    <header class="header-prive">
      <h1><i class="fa-solid fa-id-card" style="color: var(--sable-dore);"></i> <span>Impression</span></h1>
      <div class="nav-right">
          <a href="/dashboard-48" class="btn">
            <i class="fa-solid fa-arrow-left"></i> <span class="btn-text">Retour</span>
          </a>
          <button class="btn btn-gold" onclick="window.print()">
            <i class="fa-solid fa-print"></i> <span class="btn-text">Imprimer</span>
          </button>
      </div>
    </header>

    <div class="preview-container">
        <div class="page-a4">
          <div class="half">
            <ThankYouCard />
            <div class="cut-line"></div> 
          </div>
          <div class="half">
            <ThankYouCard />
          </div>
        </div>
    </div>

    <footer class="dashboard-footer">
      <p>&copy; {currentYear} Jean François & Aniuta — Dashboard Atelier</p>
    </footer>

  </body>
</html>