---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/style.css';
import '../styles/fa/css/brands.min.css';
import '@fontsource/poppins/300.css';
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/700.css';

// --- CONFIGURATION SEO ET MOTS-CLÉS ---
const defaultTitle = "Bougies Artisanales & Sculpture Bois Lozère | JF & Aniuta";
const defaultDesc = "Artisanat d'art en Lozère : bougies naturelles parfumées et sculptures sur bois local. Créations fait main à Chasseradès (48).";

const { 
    title = defaultTitle, 
    description = defaultDesc, 
    pageId = "default",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, "https://jf-aniuta.vercel.app");
const socialImageURL = new URL("/images/logo_512.png", "https://jf-aniuta.vercel.app");
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta property="og:locale" content="fr_FR">
    <meta property="og:title" content={title}>
    <meta property="og:site_name" content="JF & A">
    <meta property="og:url" content={canonicalURL.href}>
    <meta property="og:type" content="website">
    <meta property="og:image" content={socialImageURL.href}>
    <meta property="og:description" content={description}>
    
    <meta name="google-site-verification" content="gDpJX9drtEYHVvvOGbR_7MWrd1sx_G2tLSI-Ti0ntUE" />

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <meta property="og:image:width" content="512">
    <meta property="og:image:height" content="512">
    <meta name="twitter:image:alt" content="Logo JF & ANIUTA">
    <meta name="twitter:image" content={socialImageURL.href}>

    <title>{title}</title>
    <meta name="description" content={description}>
    
    <link rel="canonical" href={canonicalURL.href} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#fdfaf7">

    <slot name="head" />
</head>
<body>

    <Header pageId={pageId} />

    <main>
        <slot />
    </main>
    
    <Footer />

    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .catch(err => console.log('Erreur SW:', err));
            });
        }
    </script>

<script is:inline define:vars={{ isDev: import.meta.env.DEV }}>
  (async () => {
    if (isDev || window.location.pathname.includes('dashboard')) return;
    if (sessionStorage.getItem('site_visited')) return;

    // --- FIX GOOGLE : Définition de la variable manquante ---
    const botPatterns = /bot|spider|crawler|lighthouse|inspect|googlebot|bingbot|yandex|baiduspider|facebookexternalhit/i;
    
    // Maintenant botPatterns existe, donc cette ligne ne plantera plus
    const isBot = botPatterns.test(navigator.userAgent);

    const sendLog = async () => {
        if (sessionStorage.getItem('site_visited')) return;
        sessionStorage.setItem('site_visited', 'true');
        
        const isQR = new URLSearchParams(window.location.search).get('ref') === 'qr';
        
        try {
          await fetch('/api/log-visit', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              ua: isBot ? "Bot" : navigator.userAgent,
              isQR: isQR
            })
          });
        } catch (err) {}
    };

    const triggerEvents = ['mousedown', 'keydown', 'touchstart', 'scroll'];
    
    const setupTrigger = () => {
      if (isBot) {
        sendLog();
      } else {
        setTimeout(() => {
          triggerEvents.forEach(event => {
            window.addEventListener(event, sendLog, { once: true, passive: true });
          });
        }, 2000);
      }
    };

    if (document.readyState === 'complete') {
      setupTrigger();
    } else {
      window.addEventListener('load', setupTrigger);
    }
  })();
</script>
</body>
</html>