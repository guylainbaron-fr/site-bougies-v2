---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/style.css';
import '../styles/fa/css/brands.min.css';
import '@fontsource/poppins/300.css';
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/700.css';
// @ts-ignore
import { kv } from '@vercel/kv';

const { title, description, holidayMessage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, "https://jf-aniuta.vercel.app");
const socialImageURL = new URL("/images/logo_512.png", "https://jf-aniuta.vercel.app");

// On simplifie au maximum le bloc KV pour éviter l'erreur de "string"
if (import.meta.env.PROD) {
    try {
        const url = new URL(Astro.request.url);
        const ua = Astro.request.headers.get('user-agent') || '';
        
        await kv.incr('visites_totales');

        let dev = "Ordinateur";
        if (ua.includes('Android')) dev = "Android";
        else if (ua.includes('iPhone') || ua.includes('iPad')) dev = "iOS";

        let br = "Autre";
        if (ua.includes('Chrome')) br = "Chrome";
        else if (ua.includes('Safari')) br = "Safari";
        else if (ua.includes('Firefox')) br = "Firefox";

        // On utilise un format de date ultra-simple sans caractères spéciaux complexes
        const now = new Date();
        const simpleDate = `${now.toLocaleDateString('fr-FR')} ${now.toLocaleTimeString('fr-FR')}`;

        const log = {
            date: simpleDate,
            device: dev,
            browser: br,
            isQR: url.searchParams.get('ref') === 'qr'
        };

        await kv.lpush('journal_visites', JSON.stringify(log));
        await kv.ltrim('journal_visites', 0, 49);
    } catch (e) {
        // Silencieux en prod pour ne pas bloquer le rendu
    }
}
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta property="og:locale" content="fr_FR">
    <meta property="og:title" content={title || "JF & A"}>
    <meta property="og:site_name" content="JF & A">
    <meta property="og:url" content={canonicalURL.href}>
    <meta property="og:type" content="website">
    <meta property="og:image" content={socialImageURL.href}>
    
    <meta property="og:description" content={description || "JF & A — Sculptures uniques sur bois local et bougies naturelles parfumées."}>
    
    <meta name="google-site-verification" content="googleca94fc0ed3c52975" />

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title || "JF & A"}>
    <meta name="twitter:description" content={description || "JF & A — Sculptures uniques sur bois local et bougies naturelles parfumées."}>
    <meta property="og:image:width" content="512">
    <meta property="og:image:height" content="512">
    <meta name="twitter:image:alt" content="Logo JF & ANIUTA">
    <meta name="twitter:image" content={socialImageURL.href}>

    <title>{title}</title>
    <meta name="description" content={description}>
    
    <link rel="canonical" href={canonicalURL.href} />

    <link rel="icon" href="/favicon.ico" sizes="16x16" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="icon" type="image/png" sizes="16x16" href="/images/logo_16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/images/logo_32.png" />

    <link rel="icon" type="image/png" sizes="144x144" href="/images/logo_144.png" />

    <link rel="icon" type="image/png" sizes="192x192" href="/images/logo_192.png" />

    <link rel="apple-touch-icon" href="/images/logo_192.png" />

    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#fdfaf7">

    <slot name="head" />
</head>
<body>
    <Header holidayMessage={holidayMessage} />
    
    <main>
        <slot /> 
    </main>

    <Footer />

    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .catch(err => console.log('Erreur SW:', err));
            });
        }
    </script>
</body>
</html>