import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/style.css';
import '../styles/fa/css/brands.min.css';
import '@fontsource/poppins/300.css';
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/700.css';

// @ts-ignore
import { kv } from '@vercel/kv';

const { title, description, holidayMessage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, "https://jf-aniuta.vercel.app");
const socialImageURL = new URL("/images/logo_512.png", "https://jf-aniuta.vercel.app");

// --- LOGIQUE DE COMPTAGE ANTI-DOUBLON ---
if (import.meta.env.PROD && !Astro.url.pathname.includes('dashboard')) {
    try {
        const ua = Astro.request.headers.get('user-agent') || '';
        const url = new URL(Astro.request.url);
        
        // 1. Détection Bot
        const isBot = /(googlebot|bingbot|yandexbot|duckduckbot|baiduspider|twitterbot|facebookexternalhit|ia_archiver|robot|bot|spider|headless|chrome-lighthouse)/i.test(ua);

        // 2. Vérification du cookie (on essaie de lire 'site_session_active')
        const sessionCookie = Astro.cookies.get('site_session_active');

        // On n'enregistre que si c'est un BOT OU si le cookie n'existe pas
        if (isBot || !sessionCookie) {
            
            const userIP = Astro.request.headers.get('x-real-ip') || 
                           Astro.request.headers.get('x-forwarded-for')?.split(',')[0].trim() || 
                           "Anonyme";

            let country = "France";
            let flag = "fr";
            
            // ... (ton code de Géolocalisation reste le même ici) ...
            if (userIP !== "Anonyme" && userIP !== "127.0.0.1") {
                try {
                    const geoRes = await fetch(`http://ip-api.com/json/${userIP}?fields=status,country,countryCode`, { signal: AbortSignal.timeout(2000) });
                    const geoData = await geoRes.json();
                    if (geoData.status === 'success') {
                        country = geoData.country;
                        flag = geoData.countryCode.toLowerCase();
                    }
                } catch (e) {}
            }

            let dev = isBot ? "Bot" : "PC";
            if (!isBot) {
                if (/android/i.test(ua)) dev = "Android";
                else if (/iPad|iPhone|iPod/i.test(ua)) dev = "iOS";
            }

            const now = new Date();
            const simpleDate = now.toLocaleString('fr-FR', { timeZone: 'Europe/Paris' });

            const log = {
                date: simpleDate,
                device: dev,
                ip: userIP,
                country: country,
                flag_code: flag,
                isQR: url.searchParams.get('ref') === 'qr'
            };

            await kv.incr('visites_totales');
            await kv.lpush('journal_visites', JSON.stringify(log));
            await kv.ltrim('journal_visites', 0, 99);

            // 3. FIX DU COOKIE : On force l'écriture avec des options simples
            if (!isBot) {
                Astro.cookies.set('site_session_active', 'true', { 
                    path: '/',
                    maxAge: 1800, // 30 minutes
                    httpOnly: false, // On passe à false pour faciliter la lecture
                    secure: true,
                    sameSite: 'strict'
                });
            }
        }
    } catch (e) {
        console.error("Erreur KV:", e);
    }
}
